<style>
    .anre-banner {
        background-color: rgb(var(--primary));
        color: white;
        padding: 0.5rem 0;
        font-weight: 500;
        overflow: hidden;
    }

    .banner-content {
        position: relative;
        width: 100%;
        height: 24px;
        overflow: hidden;
    }

    .sliding-content {
        display: flex;
        position: absolute;
        white-space: nowrap;
        animation: slide 20s linear infinite;
        width: 400%;
    }

    .anre-item {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        width: 25%;
    }

    .icon {
        width: 20px;
        height: 20px;
    }

    @keyframes slide {
        0% {
            transform: translateX(0);
        }
        100% {
            transform: translateX(-50%);
        }
    }

    @media (max-width: 768px) {
        .anre-banner {
            font-size: 0.9rem;
        }
    }

    /* Pause animation on hover */
    .banner-content:hover .sliding-content {
        animation-play-state: paused;
    }
</style>