---
interface Props {
    className?: string;
}

const { className = '' } = Astro.props;
---

<div class={`plumber-container ${className}`}>
    <div class="plumber">
        <div class="head">
            <div class="cap"></div>
            <div class="face"></div>
        </div>
        <div class="body">
            <div class="overall"></div>
            <div class="arm left"></div>
            <div class="arm right">
                <div class="wrench"></div>
            </div>
        </div>
    </div>
</div>

<style>
    .plumber-container {
        position: absolute;
        top: 20px;
        left: 20px;
        width: 100px;
        height: 120px;
        z-index: 3;
    }

    .plumber {
        position: relative;
        width: 100%;
        height: 100%;
        animation: bounce 2s ease-in-out infinite;
    }

    .head {
        position: relative;
        width: 40px;
        height: 40px;
        background: #ffd7b5;
        border-radius: 50%;
        margin: 0 auto;
    }

    .cap {
        position: absolute;
        top: -10px;
        left: 5px;
        width: 30px;
        height: 20px;
        background: rgb(var(--primary));
        border-radius: 5px 5px 0 0;
    }

    .face {
        position: absolute;
        bottom: 10px;
        left: 50%;
        transform: translateX(-50%);
        width: 20px;
        height: 8px;
        border: 2px solid #333;
        border-radius: 0 0 10px 10px;
        border-top: none;
    }

    .body {
        position: relative;
        width: 60px;
        height: 70px;
        margin: -5px auto 0;
    }

    .overall {
        position: absolute;
        width: 100%;
        height: 100%;
        background: rgb(var(--primary));
        border-radius: 10px;
    }

    .arm {
        position: absolute;
        width: 15px;
        height: 40px;
        background: rgb(var(--primary));
        top: 0;
    }

    .arm.left {
        left: -10px;
        transform: rotate(15deg);
    }

    .arm.right {
        right: -10px;
        transform: rotate(-15deg);
        animation: moveArm 1.5s ease-in-out infinite;
    }

    .wrench {
        position: absolute;
        bottom: -5px;
        right: -5px;
        width: 20px;
        height: 8px;
        background: #666;
        border-radius: 2px;
        transform: rotate(-45deg);
    }

    @keyframes bounce {
        0%, 100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-10px);
        }
    }

    @keyframes moveArm {
        0%, 100% {
            transform: rotate(-15deg);
        }
        50% {
            transform: rotate(-45deg);
        }
    }

    @media (max-width: 768px) {
        .plumber-container {
            display: none;
        }
    }
</style>