---
interface Props {
    title: string;
    description: string;
    icon: string;
}

const { title, description, icon } = Astro.props;
---

<div class="service-card">
    <div class="icon" set:html={icon}></div>
    <h3>{title}</h3>
    <p>{description}</p>
</div>

<style>
    .service-card {
        background: white;
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
        text-align: center;
    }

    .service-card:hover {
        transform: translateY(-5px);
    }

    .icon {
        width: 64px;
        height: 64px;
        margin: 0 auto 1rem;
        color: rgb(var(--primary));
    }

    .icon svg {
        width: 100%;
        height: 100%;
    }

    h3 {
        color: rgb(var(--dark));
        margin: 0 0 1rem;
        font-size: 1.5rem;
    }

    p {
        color: #666;
        margin: 0;
        line-height: 1.6;
    }
</style>